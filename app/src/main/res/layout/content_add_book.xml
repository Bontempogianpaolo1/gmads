<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:layout_constraintHorizontal_weight="1"
    tools:context=".AddBook"
    tools:showIn="@layout/app_bar_add_book">

    <TextView
        android:id="@+id/LabelManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/scan1"
        android:textAlignment="center"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="73dp" />

    <EditText
        android:id="@+id/EditIsbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="@string/insert"
        android:inputType="number" />

    <TextView
        android:id="@+id/LabelScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/EditIsbn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:text="@string/scan2"
        android:textSize="14sp" />

    <Button
        android:id="@+id/scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LabelScan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/scan3"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/next"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/EditIsbn"
        android:layout_centerHorizontal="true"
        android:layout_toEndOf="@+id/EditIsbn"
        android:background="@color/colorPrimaryDark"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:contentDescription="@string/selectImage" />

    <TextView
        android:id="@+id/Labelinsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/insertInfoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="@string/click_to_insert_book"
        android:textSize="14sp" />

    <Button
        android:id="@+id/insertInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LabelManual"
        android:layout_alignStart="@+id/scan"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/insert"
        android:textColor="#FFFFFF" />

</RelativeLayout>